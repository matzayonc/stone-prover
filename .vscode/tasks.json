{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "-c",
                "dbg",
                "--copt=-DNDEBUG",
                "//src/starkware/main/cpu:cpu_air_prover"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
} 